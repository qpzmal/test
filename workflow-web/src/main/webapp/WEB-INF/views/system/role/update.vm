#define($cssblock)
<link href="#springUrl("")/static/css/plugins/switchery/switchery.css?$!application.getAttribute('/static/css/plugins/switchery/switchery.css')" rel="stylesheet">
#end

<div class="ibox-content">
    <form class="form-horizontal m-t" id="commentForm">
        <input type="hidden" name="id" value="$sysRole.id">
        <div class="form-group">
            <label class="col-sm-3 control-label">角色名称:</label>
            <div class="col-sm-8">
                <input value = "$!{sysRole.name}" id="role_name" name="role_name" maxlength="50" type="text" class="form-control" required="" aria-required="true">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">角色描述:</label>
            <div class="col-sm-8">
                <input value = "$!{sysRole.description}" id="description" name="description" maxlength="100" type="text" class="form-control" >
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">是否是系统用户:</label>
            <div class="col-sm-8">
                <input value = "$!{sysRole.isSystem}"  id="is_system" name="is_system" type="checkbox" class="js-switch" checked />
            </div>

        </div>

        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-3">
                <button class="btn btn-primary" type="submit"><i class="fa fa-check"></i> 保存</button>
            </div>
            <div class="col-sm-3 col-sm-offset-1">
                <button class="btn btn-default" type="button"><i class="fa fa-reply"></i> 取消</button>
            </div>
        </div>
    </form>
</div>




