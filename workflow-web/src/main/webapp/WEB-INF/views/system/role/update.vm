        var description = $("#description").val();
        var is_system = $(".js-switch")[0].checked;
        $.ajax({
            url:"/role/update.json",
            type:"post",
            data:{
                name:name,
                description:description,
                isSystem:is_system
            },
            success: function(returnData){
                console.log(returnData);
