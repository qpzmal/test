                    #if($!{sysInfo.smsSwitch} == "0")
                       checked
                    #end
                />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 col-sm-offset-3">
                <a href="javascript:;" class="btn btn-info btn-sm button_upload_logo "><i class="fa fa-upload "></i> 上传LOGO </a>
            </div>
