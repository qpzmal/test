<script>
    var start = {
        elem: "#start_date",
        format: "YYYY/MM/DD",
        min: laydate.now(),
        max: "2099-06-16",
        istime: false,
        istoday: false,
        choose: function (datas) {
            end.min = datas;
            end.start = datas
        }
    };
    var end={
        elem:"#end_date",
        format: "YYYY/MM/DD",
        min: laydate.now(),
        max: "2099-06-16",
        istime: false,
        istoday: false,
        choose: function (datas) {
            start.max = datas
        }};
    laydate(start);
    laydate(end);

    var config = {
        ".chosen-select": {},
        ".chosen-select-deselect": {allow_single_deselect: !0},
        ".chosen-select-no-single": {disable_search_threshold: 10},
        ".chosen-select-no-results": {no_results_text: "Oops, nothing found!"},
        ".chosen-select-width": {width: "95%"}
    };
    for (var selector in config)
        $(selector).chosen(config[selector]);


    $.validator.setDefaults(
            {highlight:function(e){$(e).closest(".form-group").removeClass("has-success").addClass("has-error")},
                success:function(e){
                    e.closest(".form-group").removeClass("has-error").addClass("has-success")
                },
                errorElement:"span",
                errorPlacement:function(e,r){e.appendTo(r.is(":radio")||r.is(":checkbox")?r.parent().parent().parent():r.parent())},
                errorClass:"help-block m-b-none",validClass:"help-block m-b-none"}
    ),
    $().ready(
            function(){
                var e="<i class='fa fa-times-circle'></i> ";
                $("#commentForm").validate();
                {var i=document.querySelector(".js-switch"),
                        t=(new Switchery(i,{color:"#1AB394"}));
                };
                $("#pay_percent").knob();
            }

    );

    $(".btn-primary").click(function(){
        add();
    })

    function add(){
        var name = $("#p_name").val();
        var orderNum = $("#order_num").val();
        var secOrderNum = $("#sec_order_num").val();
        var type = $("#type").val();
        var orderDate = $("#order_date").val();

        var startDate = $("#start_date").val();
        var endDate = $("#end_date").val();

        var areaId = $("#area_id").val();
        var personId = $("#person_id").val();


        var amount = $("#amount").val();


        var payPercent = $("#pay_percent").val();
        var accountPeriod = $("#account_period").val();

        $.ajax({
            url:"/buyOrder/add.json",
            type:"post",
            data:{
                name:name,
                orderNum:orderNum,
                secOrderNum:secOrderNum,
                type:type,
//                orderDate:orderDate,
                areaId:areaId,
                amount:amount,
//                startDate:startDate,
//                endDate:endDate,
                personId:personId,
//                payPercent:payPercent,
                accountPeriod:accountPeriod
            },
            success: function(returnData){
                console.log(returnData);
                if(returnData.code == 1){
                    layer.msg('添加成功!');

                    setTimeout(function(){
                        window.location.href = "/buyOrder/index";
                        }, 300
                    );
                } else{
                    layer.msg('添加失败, 请联系技术人员!');
                }
            }

        });
    }

    // 返回
    $(".btn-default").click(function(){
        history.go(-1);
    })
</script>
#end