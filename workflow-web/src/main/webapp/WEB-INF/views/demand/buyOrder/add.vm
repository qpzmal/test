<form class="form-horizontal m-t" id="commentForm">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>项目基本信息</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">项目名称</label>
                        <div class="col-sm-8">
                            <input id="p_name" name="p_name" maxlength="50" type="text" class="form-control" >
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">项目编号</label>
                        <div class="col-sm-8">
                            <input id="order_num" name="order_num" maxlength="15" type="text" class="form-control" required aria-required="true">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">项目补充编号</label>
                        <div class="col-sm-8">
                            <input id="sec_order_num" name="sec_order_num" maxlength="15" type="text" class="form-control" required aria-required="true">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">项目类型</label>
                        <div class="col-sm-8">
                            <select id="type" data-placeholder="选择项目类型..." class="chosen-select" style="width:350px;"  tabindex="2">
                                <option value="">请选择项目类型</option>
                                <option value="1" hassubinfo="true">框架</option>
                                <option value="2" hassubinfo="true">单采</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">项目日期</label>
                        <div class="col-sm-8">
                            <input id="order_date" name="order_date" class="form-control layer-date" placeholder="YYYY-MM-DD" onclick="laydate({istime: false, format: 'YYYY-MM-DD'})">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">项目负责人ID</label>
                        <div class="col-sm-8">
                            <input id="person_id" name="person_id" maxlength="100" type="text" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>投放信息</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">投放地区编号</label>
                        <div class="col-sm-8">
                            <select id="delivery_area_ids" data-placeholder="选择投放地区" class="chosen-select" multiple style="width:350px;" tabindex="4">
                                <option value="">请选择角色</option>
                                #foreach($data in $areaList)
                                    <option value ="$data.id">$data.name</option>
                                #end
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">投放开始日期</label>
                        <div class="col-sm-4">
                            <input id="start_date" placeholder="开始日期" class="form-control layer-date" placeholder="YYYY-MM-DD" onclick="laydate({istime: false, format: 'YYYY-MM-DD'})">
                        </div>
                        <div class="col-sm-4">
                            <input id="end_date" placeholder="结束日期" class="form-control layer-date" placeholder="YYYY-MM-DD" onclick="laydate({istime: false, format: 'YYYY-MM-DD'})">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">公司区域编号</label>
                        <div class="col-sm-8">
                            <select id="area_id" ata-placeholder="请选择区域" class="chosen-select" style="width:350px;" tabindex="2">
                                <option value="">请选择区域</option>
                                #foreach($data in $areaList)
                                    <option value ="$data.id">$data.name</option>
                                #end
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>销售信息</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">项目总金额</label>
                        <div class="col-sm-8">
                            <input id="amount" name="amount" type="text" class="form-control" aria-required="true">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>付款信息 </h5>
                </div>
                <div class="ibox-content">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">回款比例</label>
                        <div class="col-sm-8 ">
                            <input id="pay_percent" type="text" value="0" class="dial m-r" data-fgColor="#1AB394" data-width="85" data-height="85" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">账期</label>
                        <div class="col-sm-8">
                            <input id="account_period" name="account_period" maxlength="5" type="text" class="form-control">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-3">
                <button class="btn btn-primary" type="button"><i class="fa fa-check"></i> 保存</button>
            </div>
                <div class="col-sm-3 col-sm-offset-1">
                    <button class="btn btn-default" type="button"><i class="fa fa-reply"></i> 取消</button>
                </div>
            </div>
        </div>

    </div>
</form>

