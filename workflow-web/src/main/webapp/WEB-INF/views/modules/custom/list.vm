
#define($cssblock)
#end

<div class="wrapper wrapper-content animated fadeInRight">
    <button type="button" class="btn btn-w-m btn-primary"><i class="fa fa-plus "></i> 添加</button>
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                        <tr>
                            <th>客户名称</th>
                            <th>状态</th>
                            <th>管理</th>
                        </tr>
                        </thead>
                        <tbody>
                        #foreach($data in $dataList)
                            <tr class="gradeX">
                                <td>$!{data.name}</td>
                                <td>
                                    #if($!{data.itemStatus} == "0") 启用
                                    #else 停用
                                    #end
                                </td>
                                <td class="right">
                                    <input type="hidden" value="$!{data.id}">
                                    <a href="javascript:;" class="btn btn-info btn-sm button_view_pd"><i class="fa fa-pencil "></i> 修改 </a>
                                    <a href="javascript:;" class="btn btn-danger btn-sm button_view_pd"><i class="fa fa-trash "></i> 删除 </a>
                                    <a href="javascript:;" class="btn btn-default btn-sm button_view_pd"><i class="fa fa-search "></i> 查看 </a>
                                </td>
                            </tr>
                        #end
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


#define($jsblock)
<script>
    $(function(){
    });

    // 添加
    $(".btn-primary").click(function(){
        window.location.href = "${rc.contextPath}/custom/toAdd";
    })
    // 修改
    $(".btn-info").click(function(){
        var id = $(this).parent().children(":first").val();
        window.location.href = "${rc.contextPath}/custom/toUpdate?id=" + id;
    })
    // 修改
    $(".btn-default").click(function(){
        var id = $(this).parent().children(":first").val();
        window.location.href = "${rc.contextPath}/custom/toRefer?id=" + id;
    })
    // 删除
    $(".btn-danger").click(function(){
        var id = $(this).parent().children(":first").val();
        delItem(function(){
            $.ajax({
                url:"/custom/remove.json",
                type:"post",
                data:{
                    "id":id
                },
                success: function(returnData){
                    if(returnData.code == 1){
                        popMsg('删除成功!', "/custom/index");
                    } else{
                        layer.msg(returnData.info);
                    }
                }

            });
        });
    })

</script>
#end