## 引入css
#define($cssblock)
<link href="#springUrl("")/static/css/plugins/switchery/switchery.css?$!application.getAttribute('/static/css/plugins/switchery/switchery.css')" rel="stylesheet">

#end

<div class="ibox-content">
    <form class="form-horizontal m-t" id="commentForm">
        <input type="hidden" id="id" name="id" value="$baseArea.id">
        <div class="form-group">
            <label class="col-sm-3 control-label">上级区域</label>
            <div id="parent_content"  class="col-sm-8">
                <input id="parent_id" hidden value="$!{baseArea.parentId}">
                <input disabled value="$!{parentAreaName}" id="parent_name" name="parent_name" type="text" class="form-control" >
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">区域名称:</label>
            <div class="col-sm-8">
                <input  disabled value="$!{baseArea.name}" id="area_name" name="area_name" maxlength="50" type="text" class="form-control" required="" aria-required="true">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">区域编号</label>
            <div class="col-sm-8">
                <input  disabled value="$!{baseArea.code}" id="code" name="code" maxlength="50" type="text" class="form-control" required="" aria-required="true">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">房租成本</label>
            <div class="col-sm-8">
                <input  disabled value="$!{baseArea.roomPay}" id="room_pay" name="room_pay" maxlength="50" type="text" class="form-control" required="" aria-required="true">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">备注</label>
            <div class="col-sm-8">
                <input  disabled value="$!{baseArea.remark}" id="remark" name="remark" maxlength="50" type="text" class="form-control" required="" aria-required="true">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">启用:</label>
            <div class="col-sm-8">
                <input  disabled id="item_status" name="item_status" type="checkbox" class="js-switch"
                    #if($!{baseArea.itemStatus} == "0")
                       checked
                    #end
                />
            </div>

        </div>
        <div class="form-group">
            <div class="col-sm-offset-6">
                <button class="btn btn-default" type="button"><i class="fa fa-reply"></i> 取消</button>
            </div>
        </div>
    </form>
</div>


