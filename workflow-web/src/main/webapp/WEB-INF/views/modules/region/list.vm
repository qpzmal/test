
#define($cssblock)
#end

<div class="wrapper wrapper-content animated fadeInRight">
    <button type="button" class="btn btn-w-m btn-primary"><i class="fa fa-plus "></i> 添加</button>
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                        <tr>
                            <th>地域名称</th>
                            <th>地域类型</th>
                            <th>管理</th>
                        </tr>
                        </thead>
                        <tbody>
                        #foreach($data in $dataList)
                            <tr class="gradeX">
                                <td>$!{data.name}</td>
                                <td>
                                    #if($!{data.type} == 1)
                                    省
                                    #elseif($!{data.type} == 2)
                                            市
                                    #elseif($!{data.type} == 3)
                                        自治州
                                    #elseif($!{data.type} == 4)
                                        区
                                    #end
                                    </td>
                                <td class="right">
                                    <input type="hidden" value="$!{data.id}">
                                    <a href="javascript:;" class="btn btn-info btn-sm button_view_pd"><i class="fa fa-pencil "></i> 修改 </a>
                                    <a href="javascript:;" class="btn btn-danger btn-sm button_view_pd"><i class="fa fa-trash "></i> 删除 </a>
                                </td>
                            </tr>
                        #end
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


#define($jsblock)
<script>
    $(function(){
    });

    // 添加
    $(".btn-primary").click(function(){
        window.location.href = "${rc.contextPath}/region/toAdd";
    })
    // 修改
    $(".btn-info").click(function(){
        var id = $(this).parent().children(":first").val();
        window.location.href = "${rc.contextPath}/region/toUpdate?id=" + id;
    })
    // 删除
    $(".btn-danger").click(function(){
        var id = $(this).parent().children(":first").val();
        delItem(function(){
            $.ajax({
                url:"/region/update.json",
                type:"post",
                data:{
                    "id":id,
                    "delFlag":1
                },
                success: function(returnData){
                    if(returnData.code == 1){
                        popMsg('删除成功!', "/region/index");
                    } else{
                        layer.msg('删除失败, 请联系技术人员!');
                    }
                }
            });
        });

    })

</script>
#end