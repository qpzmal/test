<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-5">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">公司</label>
                        <div id="area_id_content"  class="col-sm-3">
                            <select id="area_select" data-placeholder="请选择公司" style="width:350px;" class="chosen-select" tabindex="2">
                                <option value="">请选择公司</option>
                                #foreach($data in $areaList)
                                    <option value ="$data.id"
                                        #if($!{areaId} == $data)
                                            selected
                                        #end
                                    >$data.name</option>
                                #end
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">所属部门</label>
                        <div id="dept_id_content"  class="col-sm-10">
                            <input id="dept_id" name="dept_id" type="text" class="form-control" >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button type="button" class="btn btn-w-m btn-primary"><i class="fa fa-plus "></i> 添加</button>
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                        <tr>
                            <th>部门名称</th>
                            <th>所属公司</th>
                            <th>上级部门</th>
                            <th>管理</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($data in $dataList)
                            <tr class="gradeX">
                                <td>$!{data.baseDept.name}</td>
                                <td>$!{data.areaName}</td>
                                #if(!${data.parentName})
                                    -
                                #else
                                    <td>${data.parentName}</td>
                                #end
                                <td>$!{data.baseDept.itemStatus}</td>
                                <td class="right">
                                    <input type="hidden" value="$!{data.id}">
                                    <a href="javascript:;" class="btn btn-info btn-sm button_view_pd"><i class="fa fa-pencil "></i> 修改 </a>
                                    <a href="javascript:;" class="btn btn-danger btn-sm button_view_pd"><i class="fa fa-trash "></i> 删除 </a>
                                </td>
                            </tr>
                            #end
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



