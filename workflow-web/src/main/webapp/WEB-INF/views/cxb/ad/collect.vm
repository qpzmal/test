<div class="money-con mt-list">
    <h3>SDK广告汇总：</h3>
    版本：<input type="text" id="versions" name="versions">
    <input type="button" value="  查  询  " class="inp-sure" onclick="getQuery();">
    <input type="button" value="导出" class="money-btn" onclick="exportCollectData();">
</div>
<table class="money-data mt-10 mb-30">
    <thead>
    <tr>
        <th width="150">日期</th>
        <th width="150">曝光PV</th>
        <th width="150">曝光UV</th>
        <th width="150">点击PV</th>
        <th width="150">点击UV</th>
    </tr>
    </thead>
    <tbody id="collectData">
    </tbody>
</table>
<div class="PageCode"></div>
<link rel="stylesheet" href="${rc.contextPath}/static/css/page.css">
<script src="${rc.contextPath}/static/js/jquery.page.js"></script>
<script>

    function drawCollectData(){
        var params = {
            startTime: $("#startTime").val(),
            endTime: $("#endTime").val(),
            cnids: $("#cnids").val(),
            version: $("#versions").val()
        };
        setCollectDataPageData(1);
        createCollectPageWidget(params);

    }

    function getQuery(){
        var params = {
            startTime: $("#startTime").val(),
            endTime: $("#endTime").val(),
            cnids: $("#cnids").val(),
            version: $("#versions").val()
        };
        setCollectDataPageData(1);
        createCollectPageWidget(params);
    }

    function createCollectPageWidget(params){
        var totalPage = 0;
    	$.ajax({
            url: "${rc.contextPath}/cxb/ad/getCollectDataPageCnt.json",
            type: "POST",
            data: params,
            success: function(returnData){
                if(returnData.code == 1){
                    totalPage = returnData.data;
                    //创建分页插件
                    $(".PageCode").createPage({
                        pageCount: totalPage,
                        current:1,
                        backFn: function(p){//p为当前页号
                            setCollectDataPageData(p);
                        }
                    });
                } else{
                    alert(returnData.info);
                    return;
                }
            }
    	});
    }
    
    function setCollectDataPageData(pageNo){
        var params = {
            startTime: $("#startTime").val(),
            endTime: $("#endTime").val(),
            cnids: $("#cnids").val(),
            version: $("#versions").val(),
            pageNo:pageNo//添加页号信息
        };
       $.ajax({
           url: "${rc.contextPath}/cxb/ad/getCollectDataByPage.json",
           type: "POST",
           data: params,
           success: function(returnData){
               if(returnData.code == 1){
                   var tableData = "";
                   $.each(returnData.data, function(i, item){
                       tableData += "<tr><td>"
                               + item.dt + "</td><td>"
                               + item.bgpv + "</td><td>"
                               + item.bguv + "</td><td>"
                               + item.djpv + "</td><td>"
                               + item.djuv + "</td></tr>";
                   });
                   $("#collectData").html(tableData);
               }
           }
       });      
    }
    
    function exportCollectData(){
        var startTime = $("#startTime").val();
        var endTime = $("#endTime").val();
        var cnids = $("#cnids").val();
        var version = $("#versions").val();
        window.location.href="/cxb/ad/exportCollectData.json?startTime="+startTime+"" +
                "&endTime="+endTime+"&cnids="+cnids+"&version="+version+"";
     }
</script>