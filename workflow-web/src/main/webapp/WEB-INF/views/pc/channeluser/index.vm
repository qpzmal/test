#set($layout = '/layout/empty.vm')
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--360浏览器优先以webkit内核解析-->
    <title> - 主页示例</title>
    <link rel="shortcut icon" href="favicon.ico">
    <link href="${rc.contextPath}/static/css/bootstrap.min.css?v=3.3.6" rel="stylesheet">
    <link href="${rc.contextPath}/static/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="${rc.contextPath}/static/css/animate.css" rel="stylesheet">
    <link href="${rc.contextPath}/static/css/style.css?v=4.1.0" rel="stylesheet">
    <link href="${rc.contextPath}/static/js/plugins/layer/laydate/need/laydate.css" rel="stylesheet">
</head>
<body class="white-bg">
<div class="wrapper wrapper-content">
    <a class="add-qdfc" href="/pc/channeluser/toAddChanneluser?userType=$!{userType}">添加渠道用户</a>
    <div class="add-authorizer ml-0">
        <div class="authorizer-name">
            <label>渠道ID：</label>
            <input type="text" class="inp-name" name="channelid" id="channelid" value="$!{cnid}">
            <input type="button" onclick="Search()" value="查询">
        </div>
    </div>
    <form id="form1" action="/zwsc/channeluser/getchanneluserlist" method="post" name="pageForm">
        <input type="hidden" name="pageSize" value=$!{page.pageSize} id="pageSize"></input>
        <input type="hidden" name="pageIndex" value=$!{page.pageIndex} id="pageIndex"></input>
        <input type="hidden" name="cnid" value="$!{cnid}" id="cnid"></input>
        <input type="hidden" name="userType" value="$!{userType}" id="userType"></input>
    </form>
    <h2>渠道用户列表</h2>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>序号</th>
                <th>用户名</th>
                <th>密码</th>
                <th>渠道名</th>
                <th>渠道id</th>
                <th>备注</th>
                <th>操作</th>
            </tr>
                #foreach($ChannelUser in $!{page.getData()})
                <tr>
                    <td>$!{velocityCount}</td>
                    <td>$!ChannelUser.userName</td>
                    <td>$!{ChannelUser.password}</td>
                    <td>$!ChannelUser.nickName</td>
                    <td height=80   width=400 style="word-break:break-all">$!ChannelUser.cnid</td>
                    <td>$!ChannelUser.remarks</td>
                    <td><a href="javascript:void(0)" onclick="updateone($!{ChannelUser.id})">修改</a>|<a href="javascript:void(0) " onclick="deleteone($!{ChannelUser.id})">删除</a> </td>
                </tr>
                #end

            </tbody>
        </table>
    </div>

</div>
    #parse('layout/page.vm')
<!-- 全局js -->
<script src="${rc.contextPath}/static/js/jquery.min.js?v=2.1.4"></script>
<script src="${rc.contextPath}/static/js/bootstrap.min.js?v=3.3.6"></script>
<script src="${rc.contextPath}/static/js/plugins/layer/laydate/laydate.js"></script>
<!-- 自定义js -->
<script src="${rc.contextPath}/static/js/pc/channeluser.js"></script>
</body>

