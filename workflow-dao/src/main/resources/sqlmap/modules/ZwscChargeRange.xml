<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.advu.workflow.dao.database.ZwscChargeRangeMapper">
    
    <sql id="chargeWayCondition">
        <where>
            <if test="wayCode !='' and wayCode != null">
                AND charge_way = #{wayCode}
            </if>
            <if test="startTime != '' and startTime != null">
                AND dt &gt;= #{startTime}
            </if>
            <if test="endTime != '' and endTime != null">
                AND dt &lt;= #{endTime}
            </if>
            <if test="cnids != null and cnids != ''">
                AND cnid IN
                <foreach collection="cnids" item="cnid" open="(" separator="," close=")">
                    ${cnid}
                </foreach>
            </if>
        </where>
    </sql>
    
    <select id="getWayDetail" resultType="Map">
		SELECT
		    money_range AS grade,
		    IFNULL(SUM(charge_pv),0) AS pv,
            IFNULL(SUM(charge_user),0) AS uv,
            IFNULL(SUM(charge_pv) / totalPV *100,0) AS pvRate,
            IFNULL(SUM(charge_user) / totalUV *100,0) AS uvRate
		FROM
		    zwsc_charge_range,
		    (
		        SELECT
                    IFNULL(SUM(charge_pv),0) AS totalPV,
                    IFNULL(SUM(charge_user),0) AS totalUV
		        FROM
		            zwsc_charge_range
		        <include refid="chargeWayCondition"></include>
		    ) t
        <include refid="chargeWayCondition"></include>
        GROUP BY
            grade
    </select>
</mapper>