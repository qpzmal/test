<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.advu.workflow.dao.database.UserMapper">

    <resultMap id="UserResultMap" type="cn.advu.workflow.domain.database.User">
        <id column="user_id" jdbcType="BIGINT" property="id"/>
        <result property="name" column="acct_id"  />
        <result property="passwd" column="passwd"/>
        <result property="realname" column="real_name"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
        <result property="status" column="user_status"/>
        <result property="creatorId" column="creator_id"/>
        <result property="loginTime" column="login_time"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="lastLoginTime" column="last_login_time"/>
    </resultMap>

    <select id="findUserById" resultType="cn.advu.workflow.domain.database.User">

        SELECT id,name,age from test_user where id = #{id}

    </select>

    <select id="queryAdminUserByUserNameAndUserId" resultMap="UserResultMap">

        SELECT * from sys_user WHERE  user_id= #{userid}
        and acct_id = #{username} and user_status = 0

    </select>

    <select id="queryAdminUserByUserNameAndPassword" resultMap="UserResultMap">

        select * from sys_user where passwd =#{password} and acct_id =#{username} and user_status = 0

    </select>

    <update id="updateAdminUser" parameterType="cn.advu.workflow.domain.database.User">
        update sys_user set acct_id=#{name},passwd=#{passwd},real_name=#{realname},email=#{email},phone=#{phone},
        user_status=#{status},creator_id=#{creatorId},login_time=#{loginTime},create_time=#{createTime},
        update_time=#{updateTime},last_login_time=#{lastLoginTime} where user_id =#{id};

    </update>


</mapper>